import { ArrayMinSize, IsIn, IsString, Length, length } from 'class-validator';
import { TypeArray } from '../comic.constants';

export class ComicDto {
  @IsString()
  imgCover: string;

  @IsString()
  title: string;

  @IsString()
  alternativeTitle: string;

  @IsString()
  description: string;

  @IsString()
  @IsIn(TypeArray)
  type: string;

  @ArrayMinSize(1, { message: 'At least one string is required' })
  @IsString({ each: true, message: 'All elements must be strings' })
  genres: string[];
  @IsString()
  status: string;

  @IsString()
  translateStatus: string;

  @IsString()
  @Length(1)
  author: string;

  @IsString()
  @Length(1)
  artist: string;

  @IsString()
  @Length(1)
  publishingCompany: string;
}
